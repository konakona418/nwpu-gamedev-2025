include "Weapon.fbs";

namespace moe.net;

enum PlayerMotionState : byte {
    NORMAL = 0,
    JUMPING = 1,
    CROUCHING = 2,
}

struct Vec3 {
    x: float;
    y: float;
    z: float;
}

table PlayerUpdate {
    temp_id: uint16;

    pos: Vec3;
    vel: Vec3;
    head: Vec3;

    motion_state: PlayerMotionState;
    weapon: Weapon;
}

table AllPlayerUpdate {
    updates: [PlayerUpdate];
}

root_type AllPlayerUpdate;